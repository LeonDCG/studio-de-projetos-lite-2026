{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true
  },

  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
